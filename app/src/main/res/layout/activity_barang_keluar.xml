<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarangMasuk">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BarangMasuk">

        <LinearLayout
            android:id="@+id/topRightContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@mipmap/ic_launcher_round"/>

            <TextView
                android:id="@+id/appname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="My Gudang Qu"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dashboardBarangMasuk"
            android:layout_width="200dp"
            android:background="@drawable/rounded_edittext_side"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topRightContainer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gruvbox_light1"
                android:text="Dashboard Barang Keluar"
                android:textSize="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/inputdatatext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Input data barang manual"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dashboardBarangMasuk"/>


        <TextView
            android:id="@+id/IdBarangTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Barang"
            android:textSize="18dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputdatatext"/>

        <EditText
            android:id="@+id/IdBarangET"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Masukkan ID Barang"
            app:circularflow_defaultRadius="20dp"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IdBarangTV"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/NamaBarangTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:textSize="18dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IdBarangET"/>

        <EditText
            android:id="@+id/NamaBarangET"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Masukkan Nama Barang"
            app:circularflow_defaultRadius="20dp"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NamaBarangTV"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/KodeBarangTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Barang"
            android:textSize="18dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NamaBarangET"/>

        <EditText
            android:id="@+id/KodeBarangED"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Masukkan Kode Barang"
            app:circularflow_defaultRadius="20dp"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/KodeBarangTV"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/TujuanTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan Pengiriman"
            android:textSize="18dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/KodeBarangED"/>

        <EditText
            android:id="@+id/TujuanET"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Masukkan Tujuan"
            app:circularflow_defaultRadius="20dp"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TujuanTV"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/QuantityTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="18dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TujuanET"/>

        <LinearLayout
            android:id="@+id/quantityContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/QuantityTV">

            <EditText
                android:id="@+id/QuantityValueED"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:hint="Masukkan Quantity"
                android:inputType="number"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:ignore="Autofill" />

            <Spinner
                android:id="@+id/QuantityUnitSpinner"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/rounded_edittext"
                android:paddingStart="16dp"
                android:textColor="#FFFFFFFF"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/TanggalKeluarTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Keluar"
            android:textSize="18dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quantityContainer"/>

        <EditText
            android:id="@+id/TanggalKeluarED"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Masukkan Tanggal Keluar"
            app:circularflow_defaultRadius="20dp"
            android:inputType="datetime"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TanggalKeluarTV"
            tools:ignore="Autofill" />

        <TextView
            android:id="@+id/inputdatascan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Input data barang otomatis"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TanggalKeluarED"/>

        <Button
            android:id="@+id/scanQRBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/gruvbox_bright_orange"
            android:textColor="@color/gruvbox_light0"
            android:text="Scan Tag QR Code"
            android:paddingVertical="16dp"
            android:textSize="18sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputdatascan" />

        <TextView
            android:id="@+id/CheckBarangTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Cek data Barang Sudah di Database"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scanQRBT"/>

        <TextView
            android:id="@+id/StatusBarangTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:text="Tidak"
            android:layout_marginTop="20dp"
            android:textColor="@color/gruvbox_light1"
            android:padding="20dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CheckBarangTV"/>


        <Button
            android:id="@+id/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/gruvbox_bright_orange"
            android:paddingHorizontal="48dp"
            android:paddingVertical="16dp"
            android:text="Check"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:cornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/StatusBarangTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>